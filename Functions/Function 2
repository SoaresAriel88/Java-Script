//Verificação se um número é impar ou par//

function imparouPar(){
    var num = 10
    const verificacao = num % 2;
    if (verificacao == 0){
        console.log("Par");
        return true
    } else{
        console.log("Impar");
    } return false;
} if (imparouPar() == true){
    console.log("Par")
} else{
    console.log("Impar")
}
